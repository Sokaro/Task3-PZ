<Page
    x:Class="GitHubClient.BlankPage3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GitHubClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark">
        <Button x:Name="button" Content="Back" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="60" Height="60" Click="button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="85,20,20,0" TextWrapping="Wrap" Text="Repos Name" VerticalAlignment="Top" FontSize="20" Height="60" Width="245" TextAlignment="Center"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Center" Margin="20,85,25,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" TextAlignment="Center" FontSize="20" Width="315"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Margin="20,117,25,0" TextWrapping="Wrap" Text="Commits" VerticalAlignment="Top" FontSize="20" Height="513" Width="315"/>

    </Grid>
</Page>
